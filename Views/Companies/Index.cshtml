@model IEnumerable<PhoneBook.Models.Company>

@{
    ViewData["Title"] = "Index";
}

<h1>Companies</h1>

<a class="btn btn-success mb-3" asp-action="Create">Create</a>

<table class="table">

    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Description)</th>
            <th>@Html.DisplayNameFor(model => model.Address)</th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var company in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => company.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => company.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => company.Address)
                </td>
                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@company.Id">Edit</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@company.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>

</table>    