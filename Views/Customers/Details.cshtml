@model PhoneBook.Models.Customer

@{
    ViewData["Title"] = "Details";
}

<div class="container mt-4">
    <h2 class="mb-4">Customer Details</h2>

    <div class="card mb-4">
        <div class="card-header">
            <h4 class="card-title">@Html.DisplayFor(model => model.FullName)</h4>
        </div>

        <div class="card-body">
            <dl class="row">
                @if (!String.IsNullOrEmpty(Model.Notes))
                {
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Notes)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Notes)
                    </dd>
                }
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Company)
                </dt>
                @if (Model.Company is not null)
                {
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Company.Name)
                    </dd>
                }
                else
                {
                    <dd class="col-sm-10">
                        <hr style="width:40%">
                    </dd>
                }

                @if (Model.Emails is not null && Model.Emails.Count > 0)
                {
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Emails)
                    </dt>

                    <dd class="col-sm-10">
                        <ul class="list-group">
                            @foreach (var email in Model.Emails)
                            {
                                <li class="list-group-item">@email.EmailAddress</li>
                            }
                        </ul>
                    </dd>
                }
                else
                {
                    <p>Δεν έχει καταχωρηθεί email!</p>
                }

                @if (Model.Phones is not null && Model.Phones.Count > 0)
                {
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Phones)
                    </dt>
                    <dd class="col-sm-10">
                        <ul class="list-group">
                            @foreach (var phone in Model.Phones)
                            {
                                <li class="list-group-item">@phone.PhoneNumber</li>
                            }
                        </ul>
                    </dd>
                }
                else
                {
                    <p>Δεν έχει καταχωρηθεί τηλέφωνο!</p>
                }


            </dl>
        </div>
    </div>




</div>
<div>
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>