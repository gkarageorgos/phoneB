@model PhoneBook.Models.Email

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>

<div>
    <h4>Email</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EmailTypeId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EmailType.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EmailAddress)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EmailAddress)
        </dd>
    </dl>

    <form asp-action="DeleteEmail">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="CustomerId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Edit" asp-route-id="@Model.CustomerId">Back to Customer</a>
    </form>
</div>
