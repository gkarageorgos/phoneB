@model PhoneBook.Models.Email

@{
    ViewData["Title"] = "Create";
}

<h1>Add Email</h1>

<div>
    <form asp-controller="Customers" asp-action="AddEmail" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <input type="hidden" asp-for="CustomerId" />

        <div class="mt-3">
            <label asp-for="EmailAddress" class="control-label"></label>
            <input asp-for="EmailAddress" class="form-control" />
            <span asp-validation-for="EmailAddress" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <label asp-for="EmailTypeId" class="control-label"></label>
            <select asp-for="EmailTypeId" class="form-control" asp-items="ViewBag.EmailTypeId"></select>
            <span asp-validation-for="EmailTypeId" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </form>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.CustomerId">Back to Customer</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
